{
  "compilerOptions": {
    "baseUrl": "src/js",
    "target": "es5",
    "noImplicitAny": true,
    "module": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2018",
      "ESNext"
    ],
    "pretty": true
  },
  "include": [
    "./assets/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./public",
    "./themes"
  ]
}
